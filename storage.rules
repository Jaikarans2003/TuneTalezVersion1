rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Development mode - allow all access
    // WARNING: These rules are insecure and should be updated before production use
    match /{allPaths=**} {
      allow read, write: if true;
    }
    
    // Production rules (commented out during development)
    // Uncomment and modify these rules when moving to production
    /*
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to write to specific paths
    match /thumbnails/book/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /thumbnails/pdf/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /pdfs/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /audio/books/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /audio-narrations/{allPaths=**} {
      allow write: if request.auth != null;
    }
    */
  }
}